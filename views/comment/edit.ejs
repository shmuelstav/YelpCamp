<%include ..\partials\header%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment to <%=campground.name%></h1>
        <div style="width:30%; margin: 50px auto">
            <form action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>/edit" method="POST" >
                <div class="form-group">
                    <input type = "text" class="form-control"name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <input type = "text" class="form-control"name="comment[author]" placeholder="author">
                </div>

                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>

            </form>
        </div>
    </div>
</div>
<%include ..\partials\footer%>